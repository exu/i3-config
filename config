# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)

# DARK #512DA8
# ACCENT COLOR #FF4081
# LIGHT PRIMARY COLOR #D1C4E9
# PRIMARY COLOR #673AB7
# TEXT / ICONS #FFFFFF
# PRIMARY TEXT #212121
# SECONDARY TEXT #757575
# DIVIDER COLOR #BDBDBD

set $transparent #00000000

bar {
    tray_output $display1
    i3bar_command i3bar
    status_command i3status -c ~/.i3/status.conf

    colors {
        background #000000
        statusline #FFFFFF
        separator #101010
        focused_workspace  #512DA8 #512DA8 #ffffff
        active_workspace   #333333 #5f676a #ffffff
        inactive_workspace #222222 #111111 #666666
        urgent_workspace   #D1C4E9 #D1C4E9 #ffffff
        binding_mode       #FF4081 #FF4081 #000000
    }
}





